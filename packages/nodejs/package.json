        "ts-node": "^8.6.2",
        "typescript": "^3.8.2"
    },
    "devDependencies": {
        "@types/mongoose": "5.7.1",
        "@types/nodemon": "1.19.0",
        "@types/rimraf": "2.0.3",
        "@types/sha1": "1.1.2",
        "@types/webpack": "4.41.6",
        "@types/webpack-node-externals": "1.7.1",
        "cross-env": "^7.0.0",
        "html-loader": "^0.5.5",
        "nodemon": "^2.0.2",
        "npm-run-all": "^4.1.5",
        "pnp-webpack-plugin": "^1.6.4",
