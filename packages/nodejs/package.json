{
    "name": "@uls/nodejs-package",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "watch:build": "webpack-cli --watch",
        "watch:server": "nodemon \"./build/server.js\" --watch \"./build\"",
        "build": "webpack-cli",
        "build:prod": "webpack-cli --mode=\"production\"",
        "start": "node build/server.js",
        "start-dev": "npm-run-all --parallel watch:build watch:server",
        "seed": "cross-env webpack-cli --config webpack.config.seed.js && node ./build/seed.js"
    },
    "dependencies": {
        "@uls/core-common": "workspace:modules/core/common",
        "@uls/core-nodejs": "workspace:modules/core/nodejs",
        "@uls/ukulele-nodejs": "workspace:modules/ukulele/nodejs",
        "@uls/user-nodejs": "workspace:modules/user/nodejs",
        "apollo-server": "^2.10.1",
        "chalk": "^3.0.0",
        "clean-webpack-plugin": "^3.0.0",
        "dotenv": "^8.2.0",
        "faker": "^4.1.0",
        "graphql": "^14.6.0",
        "graphql-compose": "^7.14.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.9.2",
        "nodets": "^0.0.1",
        "sha1": "^1.1.1",
        "ts-node": "^8.6.2",
        "typescript": "^3.8.2"
    },
    "devDependencies": {
        "@types/faker": "4.1.9",
        "@types/jsonwebtoken": "8.3.7",
        "@types/mongoose": "5.7.1",
        "@types/nodemon": "1.19.0",
        "@types/sha1": "1.1.2",
        "@types/webpack": "4.41.6",
        "@types/webpack-node-externals": "1.7.1",
        "cross-env": "^7.0.0",
        "html-loader": "^0.5.5",
        "nodemon": "^2.0.2",
        "npm-run-all": "^4.1.5",
        "pnp-webpack-plugin": "^1.6.4",
        "ts-loader": "^6.2.1",
        "webpack": "^4.41.6",
        "webpack-cli": "^3.3.11",
        "webpack-modules": "^1.0.0",
        "webpack-node-externals": "^1.7.2"
    }
}
