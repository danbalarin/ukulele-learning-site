{
    "name": "@uls/nodejs-package",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "clean": "rimraf build",
        "prestart-dev": "cross-env yarn run clean && yarn run build",
        "watch:build": "webpack-cli --watch",
