{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "commonjs",
        "lib": ["esnext", "es2016", "dom"],
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["modules/**/*.ts", "packages/**/*.ts"],
    "exclude": [".yarn"]
}
