{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext", "es2016", "dom"],
        "strict": true,
        "sourceMap": false,
        "declaration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["modules/**/*.ts", "packages/**/*.ts", "global.d.ts"],
    "exclude": [".yarn", "**/*.stories.tsx"]
}
